<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient"
    tools:context=".Fragment.MenuFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Главная"
            android:textSize="30sp"
            android:textColor="@color/color_button"
            android:fontFamily="@font/poppinsbold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <ImageView
            android:id="@+id/windows"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/windows"
            android:layout_gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/TextView"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/macos"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/macos"
            app:layout_constraintTop_toBottomOf="@id/windows"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Мобильное приложение SAL - это приложение, разработанное специально для студентов, которые интересуются системным администрированием. Оно предлагает разнообразные обучающие материалы и задания, чтобы помочь студентам освоить основные навыки и знания, необходимые для работы в области системного администрирования"
            android:textColor="@color/color_button"
            android:textSize="10sp"
            android:gravity="center"
            android:fontFamily="@font/poppinsregular"
            app:layout_constraintTop_toBottomOf="@id/macos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/redos"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/redos"
            app:layout_constraintTop_toBottomOf="@id/text"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/linux"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/linux"
            app:layout_constraintTop_toBottomOf="@id/redos"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
